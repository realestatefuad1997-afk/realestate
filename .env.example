# Flask
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=change-me

# Databases
# Master DB holds companies and super admins
MASTER_DATABASE_URI=sqlite:////absolute/path/to/app/instance/master.db
# Default tenant DB (legacy / dev local)
TENANT_DEFAULT_DATABASE_URI=sqlite:////absolute/path/to/app/instance/app.db
# Optionally set per-tenant DB URI during creation: --db-uri postgresql+psycopg2://user:pass@host/db

# i18n
BABEL_DEFAULT_LOCALE=en
BABEL_DEFAULT_TIMEZONE=UTC

# Uploads
UPLOAD_FOLDER=app/uploads
